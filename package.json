{
	"name": "workers-hbs",
	"version": "0.1.0",
	"main": "dist/index.js",
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20230404.0",
		"esbuild": "^0.17.16",
		"jest": "^29.5.0",
		"rimraf": "^5.0.0",
		"wrangler": "^2.15.0"
	},
	"scripts": {
		"build": "rimraf dist && npm run build:js && npm run types",
		"build:dev": "rimraf dist && npm run build:js-dev",
		"build:js": "esbuild --bundle --minify --platform=node --outfile=dist/index.js ./src/index.js",
		"build:js-dev": "esbuild --bundle --watch --platform=node --outfile=dist/index.js ./src/index.js",
		"test": "jest --rootDir=tests/",
		"types": "echo \"declare module 'workers-hbs'\" > ./dist/index.d.ts"
	},
	"dependencies": {
		"@handlebars/parser": "^2.1.0",
		"handlebars": "^4.7.7"
	}
}
